<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"/>
    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/vclg"
        android:layout_weight="0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:layout_marginTop="80dp">
        <EditText
            android:id="@+id/signin_nick_txt"
            android:layout_width="306dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="닉네임"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/id_pw_txt"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/signin_id_txt"
            android:layout_width="306dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="아이디"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/id_pw_txt"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/signin_pw_txt"
            android:layout_width="306dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="비밀번호"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/id_pw_txt"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/signin_pw_ch_txt"
            android:layout_width="306dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="비밀번호 확인"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/id_pw_txt"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/signin_btn"
            android:layout_width="306dp"
            android:layout_height="60dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/signin_btn"
            android:text="Sign up"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이미 계정이 있으신가요?"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/sign_in_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/underline2"
            android:gravity="center"
            android:textColor="#01DFD7"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>

</LinearLayout>